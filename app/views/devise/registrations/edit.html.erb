<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー情報編集</h2>

     <%= form_with model: @user, id: 'edit_regi', url: user_registration_path, local: true do |f| %>

        <div class="field">
          <%= f.label :avatar, "プロフィール画像", class: 'form-control' %><br />
          <div id='profile_img_edit'></div>
          <%= f.file_field :avatar, class: 'form-control' %>
          <%= f.hidden_field :avatar_cache %>
        </div>

        <div class="field">
          <%= f.label :name, "ユーザー名 (ニックネーム)" %><br />
          <%= f.text_field :name, id:"user_name" %>
        </div>

        <div class="field">
          <%= f.label :occupation, "職業" %><br />
          <%= f.text_area :occupation, class: :form__text, id:"user_occupation" %>
        </div>

        <div class="field">
          <%= f.label :language, "使用言語" %><br />
          <%= f.text_area :language, class: :form__text, id:"user_position" %>
        </div>

         <div class="field">
          <%= f.label :profile, "プロフィール" %><br />
          <%= f.text_area :profile, class: :form__text, id:"user_profile" %>
        </div>


        <div class="actions">
          <%= f.submit "更新する", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>
